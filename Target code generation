#include <stdio.h>
#include <string.h>
#include<stdlib.h>
void main()
{
    char code[10][30], str[20], opr[10];
    int arr[] = {0,0,0,0};
    int i = 0,k=0;
    FILE *fp1,*fp2;
    fp1=fopen("inp_8086.txt","r");
    printf("file opened\n");
    fp2=fopen("result.txt","w");
    char op,fir[10],sec[10],res[10];
    while(!feof(fp1)){

    	fscanf(fp1,"%c%s%s%s\n",&op,fir,sec,res);
    	printf("%c %s %s %s\n",op,fir,sec,res); 
    
    	switch (op){
		case '+':    
		    	strcpy(opr, "ADD");
		    	break;
	    	case '-':
			strcpy(opr, "SUB");
			break;
		case '*':
			strcpy(opr, "MUL");
			break;
		case '/' :
		    	strcpy(opr, "DIV");
			break;
	    }
	    if(strlen(fir)==2)
    	    {	
    	    	if (fir[1]=='1')
    	    		fprintf(fp2,"MOV AX,BX\n");
    	    	else if (fir[1]=='2')
    	    		fprintf(fp2,"MOV BX,AX\n");
    	    	else if (fir[1]=='3')
    	    		fprintf(fp2,"MOV CX,DH\n");
    	    	else if (fir[1]=='4')
    	    		fprintf(fp2,"MOV DX,DL\n");
    	    }
    	    else
    	      fprintf(fp2,"MOV AX,%s\n", fir);
    	    if(strlen(sec)==2)
    	    {	
    	    	if (sec[1]=='1')
    	    		fprintf(fp2,"%s AX,BX\n", opr);
    	    	else if (sec[1]=='2')
    	    		fprintf(fp2,"%s AX,CX\n", opr);
    	    	else if (sec[1]=='3')
    	    		fprintf(fp2,"%s AX,DX\n", opr);
    	    }
    	    else
    	      fprintf(fp2,"%s AX,%s\n", opr,sec);
	    if(strlen(res)==2)
    	    {	
    	        if (res[1]=='1'){
  	    		fprintf(fp2,"MOV BX,AX\n");
    		}
    		else if (res[1]=='2'){
  	    		fprintf(fp2,"MOV CX,AX\n");
    		}
    		else if (res[1]=='3'){
  	    		fprintf(fp2,"MOV DX,AX\n");
    		}
    	    }
    	    
	    k++;
	    
    }
}

