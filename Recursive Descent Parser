#include <stdio.h>
#include <string.h>
#include <ctype.h>

char input[100];
int i;
char err_msg[100];

void E();
void Eprime();
void T();
void Tprime();
void F();

void E() {
    T();
    Eprime();
}

void Eprime() {
    if ((input[i] == '+') || (input[i] == '-')) {
        i++;
        T();
        Eprime();
    } 
}

void T() {
    F();
    Tprime();
}

void Tprime() {
    if ((input[i] == '*') || (input[i] == '/')) {
        i++;
        F();
        Tprime();
    } 
}

void F() {
    if (isalnum(input[i])) {
        i++;
    } else if (input[i] == '(') {
        i++;
        E();
        if (input[i] == ')') {
            i++;
        } else {
            snprintf(err_msg, sizeof(err_msg), "Error: missing ')'");
        }
    } else {
        snprintf(err_msg, sizeof(err_msg), "Error: unexpected character '%c'", input[i]);
    }
}

int main() {
    i = 0;
    err_msg[0] = '\0'; 
    printf("Enter an expression: ");
    fgets(input, sizeof(input), stdin);
    

    input[strcspn(input, "\n")] = '\0';
    
    E();
    
    if (strlen(input) == i && err_msg[0] == '\0') {
        printf("%s is accepted\n", input);
    } else {
        if (err_msg[0] == '\0') {
            snprintf(err_msg, sizeof(err_msg), "Error: unexpected character at position %d", i);
        }
        printf("%s is not accepted\n", input);
        printf("%s\n", err_msg);
    }
    
    return 0;
}
